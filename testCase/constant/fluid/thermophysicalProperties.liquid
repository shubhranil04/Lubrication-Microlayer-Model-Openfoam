FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      thermophysicalProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../runParams"

thermoType
{
    type            heRhoThermo;
    mixture         pureMixture;
    transport       const;
    thermo          hConst;
    equationOfState Boussinesq;
    specie          specie;
    energy          sensibleInternalEnergy;
}

mixture
{
    specie
    {
        molWeight   18.0;
    }
    
    equationOfState
    {
        rho0        $rhol;
        T0	    $Tsat;
        beta	    $betal;
    }
    thermodynamics
    {
        Cp          $cpl ;
        Hf          0;
    }
    transport
    {
        mu          $mul ;
        Pr          #calc "$cpl * $mul / $kappal";
    }
}

